<% const navItem = [ { href: "/", icon: "home", text: "Home", }, { href:
"/explore", icon: "explore", text: "Explore", }, { href: "/album", icon:
"album", text: "Album", }, { href: "/playlist", icon: "playlist", text:
"Playlist", }, ]; %>

<nav class="bottom-nav">
  <a href="/" class="logo bottom-nav-item">
    <div class="icon-wrapper">
      <img
        src="/images/fav/favicon.svg"
        width="24"
        height="24"
        alt="Spotify Clone Logo"
        class="small"
      />
      <img
        src="/images/logo/logo.svg"
        width="94"
        height="24"
        alt="Spotify Clone Logo"
        class="large"
      />
    </div>
    <p class="bottom-nav-text label-medium">Musify</p>
  </a>
  <% navItem.forEach(({ href, icon, text }) => { %>
  <a
    href="<%=href%>"
    class="bottom-nav-item <%= locals.currentRoute === href ? 'active' : '' %>"
    data-bottom-nav-item
  >
    <div class="icon-wrapper">
      <span class="material-symbols-rounded icon"> <%=icon%> </span>
      <div class="indicator"></div>
      <div class="state-layer"></div>
    </div>
    <p class="bottom-nav-item label-medium"><%=text%></p>
  </a>
  <% }) %>
</nav>
